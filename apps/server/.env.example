# ============================================================
# Graspy FastAPI Server - Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your values
# All settings are centralized in app/settings.py
# ============================================================

# ------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------
# Application environment: development, staging, production
APP_ENV=development

# Server host binding (0.0.0.0 allows external connections)
HOST=0.0.0.0

# Server port number
PORT=8081

# Enable auto-reload on code changes (development only)
UVICORN_RELOAD=true

# CORS allowed origins (comma-separated or JSON array)
# Example: CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# Example: CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
CORS_ORIGINS=

# ------------------------------------------------------------
# Data Storage
# ------------------------------------------------------------
# Root directory for data files (defaults to app/data)
# PY_SERVER_DATA_DIR=/path/to/data

# User database file path (defaults to {data_root}/users.json)
# PY_SERVER_USER_DB=/path/to/users.json

# ------------------------------------------------------------
# AWS Bedrock Configuration
# ------------------------------------------------------------
# Primary AWS credentials for Bedrock
BEDROCK_AWS_REGION=us-east-1
BEDROCK_AWS_ACCESS_KEY_ID=your_access_key_here
BEDROCK_AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Session token for temporary credentials (optional)
# BEDROCK_AWS_SESSION_TOKEN=

# ------------------------------------------------------------
# Strands AI Agent Configuration
# ------------------------------------------------------------
# Model ID for Strands AI agent
STRANDS_MODEL_ID=amazon.nova-lite-v1:0

# Strands agent identifiers (optional)
# STRANDS_AGENT_ID=
# STRANDS_AGENT_ALIAS_ID=

# Enable streaming responses (true/false)
STRANDS_STREAMING=true

# Force fallback model behavior (true/false)
STRANDS_FORCE_FALLBACK=false

# Model inference parameters
# STRANDS_MAX_TOKENS=  # Maximum tokens in response (optional)
STRANDS_TEMPERATURE=0  # Temperature for randomness (0.0-1.0)
STRANDS_TOP_K=1  # Top-K sampling parameter
# STRANDS_TOP_P=  # Top-P (nucleus) sampling parameter (optional)

# ------------------------------------------------------------
# Lesson Generation Configuration
# ------------------------------------------------------------
# Maximum tokens for different lesson components
LESSON_SLIDE_MAX_TOKENS=9000
LESSON_PRACTICE_MAX_TOKENS=5000

# ------------------------------------------------------------
# API Keys
# ------------------------------------------------------------
# OpenRouter API key for additional AI models
OPENROUTER_API_KEY=your_openrouter_api_key_here
